<!-- Error Messages -->
<% if @errors.present? %>
  <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
    <div class="flex items-start">
      <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
      </svg>
      <ul class="list-disc list-inside space-y-1">
        <% @errors.each do |field, messages| %>
          <% messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="bg-white rounded-xl shadow-sm p-6">
  <%= form_with url: @portfolio.id ? admin_portfolio_path(@portfolio.id) : admin_portfolios_path, method: @portfolio.id ? :patch : :post, local: true, multipart: true, class: "space-y-6" do |f| %>
    <!-- Title -->
    <div>
      <label for="portfolio_title" class="block text-sm font-medium text-gray-700 mb-2">
        제목 <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        name="portfolio[title]"
        id="portfolio_title"
        value="<%= @portfolio.title %>"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        placeholder="포트폴리오 제목"
      >
    </div>

    <!-- Client -->
    <div>
      <label for="portfolio_client" class="block text-sm font-medium text-gray-700 mb-2">고객사</label>
      <input
        type="text"
        name="portfolio[client]"
        id="portfolio_client"
        value="<%= @portfolio.client %>"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        placeholder="고객사 이름"
      >
    </div>

    <!-- Description -->
    <div>
      <label for="portfolio_description" class="block text-sm font-medium text-gray-700 mb-2">설명</label>
      <textarea
        name="portfolio[description]"
        id="portfolio_description"
        rows="6"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
        placeholder="프로젝트 설명을 입력하세요"
      ><%= @portfolio.description %></textarea>
    </div>

    <!-- Image Upload -->
    <div>
      <label for="portfolio_image" class="block text-sm font-medium text-gray-700 mb-2">이미지</label>
      <% if @portfolio.respond_to?(:image_url) && @portfolio.image_url.present? %>
        <div class="mb-3">
          <img src="<%= @portfolio.image_url %>" alt="현재 이미지" class="w-48 h-32 object-cover rounded-lg border border-gray-200">
          <p class="text-sm text-gray-500 mt-1">현재 이미지</p>
        </div>
      <% end %>
      <input
        type="file"
        name="portfolio[image]"
        id="portfolio_image"
        accept="image/*"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
      >
      <p class="text-sm text-gray-500 mt-1">JPG, PNG, GIF 형식 지원 (최대 10MB)</p>
    </div>

    <!-- Published Checkbox -->
    <div class="flex items-center">
      <input type="hidden" name="portfolio[published]" value="0">
      <input
        type="checkbox"
        name="portfolio[published]"
        id="portfolio_published"
        value="1"
        <%= @portfolio.published ? "checked" : "" %>
        class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
      >
      <label for="portfolio_published" class="ml-2 text-sm text-gray-700">공개</label>
    </div>

    <!-- Actions -->
    <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
      <button
        type="submit"
        class="bg-blue-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors"
      >
        <%= @portfolio.id ? "수정하기" : "생성하기" %>
      </button>
      <%= link_to "취소", admin_portfolios_path, class: "text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
  <% end %>
</div>
