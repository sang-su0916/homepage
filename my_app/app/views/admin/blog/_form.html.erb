<% if @errors&.any? %>
  <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
    <ul class="list-disc list-inside">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <div class="p-6 space-y-6">
    <!-- Title -->
    <div>
      <label for="blog_post_title" class="block text-sm font-medium text-gray-700 mb-2">
        제목 <span class="text-red-500">*</span>
      </label>
      <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "글 제목을 입력하세요" %>
    </div>

    <!-- Excerpt -->
    <div>
      <label for="blog_post_excerpt" class="block text-sm font-medium text-gray-700 mb-2">
        요약
      </label>
      <%= form.text_area :excerpt, rows: 2, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "글의 짧은 요약을 입력하세요" %>
    </div>

    <!-- Content -->
    <div>
      <label for="blog_post_content" class="block text-sm font-medium text-gray-700 mb-2">
        내용
      </label>
      <%= form.text_area :content, rows: 10, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "글 내용을 입력하세요" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Author -->
      <div>
        <label for="blog_post_author" class="block text-sm font-medium text-gray-700 mb-2">
          작성자
        </label>
        <%= form.text_field :author, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "작성자 이름" %>
      </div>

      <!-- Category -->
      <div>
        <label for="blog_post_category" class="block text-sm font-medium text-gray-700 mb-2">
          카테고리
        </label>
        <%= form.select :category,
            options_for_select([
              ["선택하세요", ""],
              ["트렌드", "트렌드"],
              ["프로젝트", "프로젝트"],
              ["케이스스터디", "케이스스터디"],
              ["비즈니스", "비즈니스"],
              ["회사소식", "회사소식"],
              ["팁", "팁"]
            ], @post.try(:category)),
            {},
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
    </div>

    <!-- Image Upload -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">
        대표 이미지
      </label>
      <div class="flex items-start gap-4">
        <% if @post.respond_to?(:image_url) && @post.image_url.present? %>
          <div class="flex-shrink-0">
            <img src="<%= @post.image_url %>" alt="현재 이미지" class="w-32 h-24 object-cover rounded-lg">
          </div>
        <% end %>
        <div class="flex-grow">
          <%= form.file_field :image, accept: "image/*", class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
          <p class="mt-2 text-xs text-gray-500">JPG, PNG, GIF 파일 (최대 10MB)</p>
        </div>
      </div>
    </div>

    <!-- Image URL (Alternative) -->
    <div>
      <label for="blog_post_image_url" class="block text-sm font-medium text-gray-700 mb-2">
        이미지 URL (대체)
      </label>
      <%= form.text_field :image_url, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "https://example.com/image.jpg" %>
      <p class="mt-1 text-xs text-gray-500">이미지 파일 대신 URL을 입력할 수 있습니다</p>
    </div>

    <!-- Published -->
    <div class="flex items-center">
      <%= form.check_box :published, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <label for="blog_post_published" class="ml-2 block text-sm text-gray-700">
        공개하기
      </label>
    </div>
  </div>

  <!-- Actions -->
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
    <%= link_to "취소", admin_blog_index_path, class: "px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" %>
    <%= form.submit @post.id ? "수정하기" : "등록하기", class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
  </div>
</div>
