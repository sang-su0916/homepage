<% content_for :page_title, "블로그 관리" %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">블로그 관리</h2>
    <p class="text-gray-600 mt-1">총 <%= @pagy.count %>개의 글</p>
  </div>
  <%= link_to new_admin_blog_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    새 글 작성
  <% end %>
</div>

<!-- Blog Posts Table -->
<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <% if @posts.any? %>
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">이미지</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">제목</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">카테고리</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">작성자</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">상태</th>
          <th class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">액션</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 text-sm text-gray-500"><%= post.id %></td>
            <td class="px-6 py-4">
              <% if post.thumbnail_url.present? || post.image_url.present? %>
                <img src="<%= post.thumbnail_url || post.image_url %>" alt="<%= post.title %>" class="w-16 h-12 object-cover rounded">
              <% else %>
                <div class="w-16 h-12 bg-gray-100 rounded flex items-center justify-center">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-medium text-gray-900"><%= post.title %></span>
              <p class="text-xs text-gray-500 mt-1 truncate max-w-xs"><%= post.excerpt %></p>
            </td>
            <td class="px-6 py-4">
              <% if post.category.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= post.category %>
                </span>
              <% else %>
                <span class="text-gray-400 text-sm">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600"><%= post.author || "-" %></td>
            <td class="px-6 py-4">
              <% if post.published? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  공개
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  비공개
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right space-x-3">
              <%= link_to "보기", admin_blog_path(post.id), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
              <%= link_to "수정", edit_admin_blog_path(post.id), class: "text-gray-600 hover:text-gray-800 text-sm" %>
              <%= link_to "삭제", admin_blog_path(post.id), data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15" />
      </svg>
      <p class="text-gray-500 mb-4">등록된 블로그 글이 없습니다.</p>
      <%= link_to "첫 글 작성하기", new_admin_blog_path, class: "text-indigo-600 hover:text-indigo-800" %>
    </div>
  <% end %>
</div>

<%= render "shared/pagination" %>
