<% content_for :page_title, @post.title %>

<!-- Page Header -->
<div class="flex justify-between items-start mb-6">
  <div>
    <nav class="flex items-center text-sm text-gray-500 mb-2">
      <%= link_to "블로그 관리", admin_blog_index_path, class: "hover:text-indigo-600" %>
      <span class="mx-2">/</span>
      <span class="text-gray-900">상세</span>
    </nav>
    <h2 class="text-2xl font-bold text-gray-900"><%= @post.title %></h2>
  </div>
  <div class="flex space-x-3">
    <%= link_to edit_admin_blog_path(@post.id), class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors flex items-center" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      수정
    <% end %>
    <%= link_to admin_blog_path(@post.id), data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" }, class: "bg-red-100 text-red-700 px-4 py-2 rounded-lg hover:bg-red-200 transition-colors flex items-center" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      삭제
    <% end %>
  </div>
</div>

<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <!-- Featured Image -->
  <% if @post.large_url.present? || @post.image_url.present? %>
    <div class="aspect-video bg-gray-100">
      <img src="<%= @post.large_url || @post.image_url %>" alt="<%= @post.title %>" class="w-full h-full object-cover">
    </div>
  <% end %>

  <div class="p-6">
    <!-- Meta Info -->
    <div class="flex flex-wrap items-center gap-4 mb-6 pb-6 border-b">
      <% if @post.published? %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          공개
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
          비공개
        </span>
      <% end %>

      <% if @post.category.present? %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
          <%= @post.category %>
        </span>
      <% end %>

      <% if @post.author.present? %>
        <span class="text-sm text-gray-600">
          <span class="font-medium">작성자:</span> <%= @post.author %>
        </span>
      <% end %>

      <% if @post.published_at.present? %>
        <span class="text-sm text-gray-600">
          <span class="font-medium">발행일:</span> <%= @post.published_at.strftime("%Y-%m-%d %H:%M") %>
        </span>
      <% end %>

      <span class="text-sm text-gray-600">
        <span class="font-medium">생성일:</span> <%= @post.created_at&.strftime("%Y-%m-%d %H:%M") || "-" %>
      </span>
    </div>

    <!-- Excerpt -->
    <% if @post.excerpt.present? %>
      <div class="mb-6">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">요약</h3>
        <p class="text-lg text-gray-700 italic"><%= @post.excerpt %></p>
      </div>
    <% end %>

    <!-- Content -->
    <% if @post.content.present? %>
      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">내용</h3>
        <div class="prose max-w-none text-gray-700">
          <%= simple_format(@post.content) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Actions -->
<div class="mt-6 flex justify-between">
  <%= link_to admin_blog_index_path, class: "text-gray-600 hover:text-gray-800 flex items-center" do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    목록으로
  <% end %>
</div>
