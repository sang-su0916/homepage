<% content_for :page_title, "문의 관리" %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900">문의 관리</h2>
    <p class="text-gray-600 mt-1">총 <%= @pagy.count %>개의 문의</p>
  </div>
</div>

<!-- Status Filters -->
<div class="bg-white rounded-xl shadow-sm p-4 mb-6">
  <div class="flex flex-wrap gap-2">
    <%= link_to admin_contacts_path, class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      전체
    <% end %>
    <%= link_to admin_contacts_path(status: "pending"), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'pending' ? 'bg-yellow-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      대기중
    <% end %>
    <%= link_to admin_contacts_path(status: "read"), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'read' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      읽음
    <% end %>
    <%= link_to admin_contacts_path(status: "replied"), class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'replied' ? 'bg-green-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
      답변완료
    <% end %>
  </div>
</div>

<!-- Contacts Table -->
<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <% if @contacts.any? %>
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">이름</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">이메일</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">상태</th>
          <th class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">액션</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @contacts.each do |contact| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 text-sm text-gray-500"><%= contact.id %></td>
            <td class="px-6 py-4">
              <span class="text-sm font-medium text-gray-900"><%= contact.name %></span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600"><%= contact.email %></td>
            <td class="px-6 py-4">
              <% case contact.status
                 when "pending" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  대기중
                </span>
              <% when "read" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  읽음
                </span>
              <% when "replied" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  답변완료
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right space-x-3">
              <%= link_to "상세", admin_contact_path(contact.id), class: "text-blue-600 hover:text-blue-800 text-sm" %>
              <%= link_to "삭제", admin_contact_path(contact.id), data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <p class="text-gray-500">문의가 없습니다.</p>
    </div>
  <% end %>
</div>

<%= render "shared/pagination" %>
