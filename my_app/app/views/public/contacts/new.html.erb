<%
  set_page_meta(
    title: t("contact.title"),
    description: I18n.locale == :ko ?
      "L-BIZ Partners에 프로젝트 상담 및 비즈니스 문의를 남겨주세요. 전문 컨설턴트가 빠르게 답변드립니다." :
      "Contact L-BIZ Partners for project consultation and business inquiries. Our professional consultants will respond promptly.",
    keywords: I18n.locale == :ko ?
      "문의하기, 비즈니스 상담, 프로젝트 문의, 컨설팅 상담" :
      "contact us, business consultation, project inquiry, consulting"
  )
%>

<% content_for :json_ld do %>
  <%= json_ld_tag(breadcrumb_json_ld([
    { name: I18n.locale == :ko ? "홈" : "Home", url: root_path },
    { name: t("contact.title"), url: nil }
  ])) %>
<% end %>

<!-- Page Header -->
<section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-3xl md:text-4xl font-bold mb-4"><%= t("contact.title") %></h1>
    <p class="text-blue-100"><%= t("contact.subtitle") %></p>
  </div>
</section>

<!-- Contact Form -->
<section class="py-16 bg-gray-50">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <!-- Error Messages -->
      <% if @errors.present? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
          <div class="flex items-start">
            <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <ul class="list-disc list-inside space-y-1">
              <% @errors.each do |field, messages| %>
                <% messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%= form_with url: contacts_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <!-- Name -->
        <div>
          <label for="contact_name" class="block text-sm font-medium text-gray-700 mb-2">
            <%= t("contact.form.name") %> <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            value="<%= @contact.name %>"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            placeholder="<%= t('contact.form.name_placeholder') %>"
          >
        </div>

        <!-- Email -->
        <div>
          <label for="contact_email" class="block text-sm font-medium text-gray-700 mb-2">
            <%= t("contact.form.email") %> <span class="text-red-500">*</span>
          </label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            value="<%= @contact.email %>"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            placeholder="<%= t('contact.form.email_placeholder') %>"
          >
        </div>

        <!-- Phone -->
        <div>
          <label for="contact_phone" class="block text-sm font-medium text-gray-700 mb-2">
            <%= t("contact.form.phone") %>
          </label>
          <input
            type="tel"
            name="contact[phone]"
            id="contact_phone"
            value="<%= @contact.phone %>"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            placeholder="<%= t('contact.form.phone_placeholder') %>"
          >
        </div>

        <!-- Message -->
        <div>
          <label for="contact_message" class="block text-sm font-medium text-gray-700 mb-2">
            <%= t("contact.form.message") %> <span class="text-red-500">*</span>
          </label>
          <textarea
            name="contact[message]"
            id="contact_message"
            rows="6"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
            placeholder="<%= t('contact.form.message_placeholder') %>"
          ><%= @contact.message %></textarea>
        </div>

        <!-- Submit -->
        <div>
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all"
          >
            <%= t("contact.form.submit") %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</section>
