<!-- Success Page -->
<section class="min-h-[60vh] flex items-center justify-center bg-gray-50 py-16">
  <div class="max-w-lg mx-auto px-4 text-center">
    <div class="bg-white rounded-xl shadow-lg p-8">
      <!-- Success Icon -->
      <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>

      <!-- Message -->
      <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= t("contact.success.title") %></h1>
      <p class="text-gray-600 mb-8"><%= t("contact.success.message") %></p>

      <!-- Action -->
      <%= link_to t("contact.success.back_home"), root_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
    </div>
  </div>
</section>
